{
	"productName": "BibleSearch",
	"version": "1.0.0",
	"identifier": "com.biblesearch.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"fullscreen": false,
				"title": "성경구절 검색기 | BibleSearch",
				"width": 1280,
				"height": 700
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["nsis"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"shortDescription": "성경책 구절을 간편하게 찾을 수 있습니다.",
		"longDescription": "성경책 구절을 깔끔한 UI로 검색해서 찾을 수 있습니다.",
		"category": "Utility",
		"copyright": "© 2025 Woojin",
		"publisher": "WoojinKwon",
		"windows": {
			"nsis": {
				"displayLanguageSelector": true,
				"installerIcon": "icons/installer.ico",
				"sidebarImage": "icons/sidebarImage.bmp",
				"languages": ["Korean", "English"]
			}
		}
	}
}
